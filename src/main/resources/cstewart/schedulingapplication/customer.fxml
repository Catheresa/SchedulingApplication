<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="897.0" style="-fx-background-color: #2f98ed;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cstewart.schedulingapplication.controller.Customer_Controller">
    <children>
        <Label layoutX="20.0" layoutY="14.0" text="Customers" textFill="WHITE">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <TextField fx:id="searchCustomer" layoutX="155.0" layoutY="15.0" onAction="#onInputSearchCustomer" prefHeight="35.0" prefWidth="725.0" promptText="Search customers" />
        <TableView fx:id="customerTable" layoutX="20.0" layoutY="59.0" prefHeight="282.0" prefWidth="856.0">
            <columns>
                <TableColumn fx:id="customerIDCol" prefWidth="80.00000190734863" text="Customer ID" />
            <TableColumn fx:id="customerNameCol" prefWidth="109.19994354248047" text="Customer Name" />
            <TableColumn fx:id="countryIDCol" minWidth="0.0" prefWidth="73.59994506835938" text="Country ID" />
            <TableColumn fx:id="countryCol" minWidth="0.0" prefWidth="73.59994506835938" text="Country" />
                <TableColumn fx:id="customerAddressCol" prefWidth="217.20001220703125" text="Address" />
            <TableColumn fx:id="divisionIDCol" minWidth="0.0" prefWidth="72.0" text="Div ID" />
            <TableColumn fx:id="stateCol" minWidth="0.0" prefWidth="67.5999755859375" text="State" />
                <TableColumn fx:id="customerPostalCodeCol" minWidth="0.0" prefWidth="75.5999755859375" text="Postal Code" />
                <TableColumn fx:id="customerPhoneCol" prefWidth="88.0" text="Phone" />
            </columns>
        </TableView>
        <ButtonBar layoutX="16.0" layoutY="346.0" prefHeight="40.0" prefWidth="856.0">
            <buttons>
                <Button mnemonicParsing="false" onAction="#onClickAddCustomer" text="Add">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font></Button>
                <Button mnemonicParsing="false" onAction="#onClickUpdateCustomer" text="Update">
                    <font>
                        <Font name="System Bold Italic" size="12.0" />
                    </font></Button>
                <Button mnemonicParsing="false" onAction="#onClickDeleteCustomer" text="Delete">
                    <font>
                        <Font name="System Bold Italic" size="12.0" />
                    </font></Button>
            <Button mnemonicParsing="false" onAction="#onClickAppointments" text="Appointments">
               <font>
                  <Font name="System Bold Italic" size="12.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#onClickReports" text="Reports">
               <font>
                  <Font name="System Bold Italic" size="12.0" />
               </font>
            </Button>
                <Button minWidth="74.0" mnemonicParsing="false" onAction="#onClickExitScreenCustomer" prefHeight="25.0" prefWidth="228.0" text="Exit Screen">
                    <font>
                        <Font name="System Bold Italic" size="12.0" />
                    </font></Button>
            </buttons>
        </ButtonBar>
    </children>
</AnchorPane>
